<center>
<% if flash[:notice] %>
    <%= flash[:notice] %>
<% end %>

<h2>Log in User</h2>
<div>
<%= form_tag sessions_path do |f|%>
    <%= label :user, :username %>
    <%= text_field :user, :username %>

    <%= label :user, :password %>
    <%= password_field :user, :password %>

    <%= submit_tag "Confirm" %>    
<% end %>
</div>
<p><%= link_to "back to homepage", home_index_path %></p>

