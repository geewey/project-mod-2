<body>
<center>
<% if current_user %>
<p>You are logged in as <%= current_user.username %></p>
<% end %>
</center>
</body>
<div align="right">

<% if current_user %>
  <%= link_to "My Profile", user_path(current_user.id) %><br>
<% end %>

<%= link_to "Log out", logout_path, method: :delete %><br>
</div>
<center>
<h2>PicYours - find & store your favourite pictures</h2>
<br>

<style>
{
  box-sizing: border-box;
}

.column {
  float: left;
  padding: 10px;
  width: 400px;
  height: 400px;
}

.column-img {
    width: 350px;
    height: 350px;
}

.row::after {
  content: "";
  clear: both;
  display: table;
}
</style>

<div>
<% @pictures.each do |pic| %>
    <% @url = pic.image_url %>
    <div class="column">
    <a target="_blank" href= <%= @url %>>
    <img class="column-img" src= <%= @url %>  >
    </a>
      <% if current_user %>
          <%= form_tag album_pictures_path do %>
              <%= hidden_field_tag("album_picture[picture_id]", pic.id) %>
              <%= hidden_field_tag("album_picture[album_id]", current_user.albums.find_by(main: true).id) %>
              <%= submit_tag "Save to Main Album" %>
          <% end %>
      <% end %>
    </div>
<% end %>
</div>






